{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/workout/recommend", "dest": "/api/workout-recommend.js" },
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/(.*)", "dest": "backend/app.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
} 